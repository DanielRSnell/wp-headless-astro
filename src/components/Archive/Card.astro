---
const { pathname } = Astro.url;
const { title, excerpt, action } = Astro.props;
---

<article
  class="p-4 rounded-2xl shadow-md flex flex-col justify-between py-8 gap-4"
>
  <header>
    <h1 class="text-2xl font-semibold line-clamp-2">{title}</h1>
  </header>
  <p set:html={excerpt} />
  <footer>
    <div class="flex gap-2">
      <a
        href={pathname + "/" + action}
        class="px-4 py-2 text-sm border-[0.1em] border-solid border-gray-300"
        >Read More</a
      >
    </div>
  </footer>
</article>
